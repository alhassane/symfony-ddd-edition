<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="acme.demo.domain.note.service.class">Acme\Demo\DomainBundle\Service\NoteService</parameter>
        <parameter key="acme.demo.domain.note.entity.class">Acme\Demo\DomainBundle\Entity\Note</parameter>
        <parameter key="doctrine.orm.entity.repository.class">Doctrine\ORM\EntityRepository</parameter>
    </parameters>

    <services>
        <service id="acme.demo.domain.note.repository"
                 class="%doctrine.orm.entity.repository.class%"
                 factory-service="doctrine.orm.default_entity_manager"
                 factory-method="getRepository"
                 public="false">
            <argument>%acme.demo.domain.note.entity.class%</argument>
        </service>
            <service id="acme.demo.note"
                 class="%acme.demo.domain.note.service.class%"
                 public="true">
                <argument type="service" id="acme.demo.domain.note.repository" />
                <argument type="service" id="doctrine.orm.default_entity_manager" />
                <argument type="service" id="validator" />
        </service>
    </services>


</container>
